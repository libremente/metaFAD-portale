<?xml version="1.0" encoding="utf-8"?>
<glz:EmptyComponent
    xmlns:t="org.glizycms.template.views.components.*">

    <glz:Fieldset label="{i18n:Testata}">
        <glz:Image id="headerLogo" label="{i18n:Logo}" required="true" />
    </glz:Fieldset>

    <glz:Fieldset id="footer" label="{i18n:Footer}" data="type=repeat">
        <glz:Image id="footerLogo" label="{i18n:Logo aggiuntivo}" />
        <glz:Input id="footerLogoLink" label="{i18n:Link logo}" />
        <glz:Input id="footerLogoTitle" label="{i18n:Titolo logo}" />
    </glz:Fieldset>

</glz:EmptyComponent>
